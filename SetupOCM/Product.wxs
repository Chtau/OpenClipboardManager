<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" Name="Open Clipboard Manager" Language="1033" Version="0.0.1" Manufacturer="Christoph Taucher" UpgradeCode="9c9a11d1-734a-4a8a-b2a1-96fbd3c749b6">
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
		<MediaTemplate />
    
    <Feature Id="ProductFeature" Title="Open Clipboard Manager" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
      <ComponentRef Id="ApplicationShortcut"/>
		</Feature>
	</Product>

	<Fragment>
		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="ProgramFilesFolder">
				<Directory Id="INSTALLFOLDER" Name="Open Clipboard Manager" />
			</Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="Open Clipboard Manager"/>
      </Directory>
		</Directory>
	</Fragment>

	<!--<Fragment>
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
			<Component Id="ProductComponent">
        <File Source="$(var.OCMApp.TargetPath)"/>
			</Component>
		</ComponentGroup>
	</Fragment>-->
  
  <Fragment>
    <Icon Id="Shortcut.ico" SourceFile="clipmanager_logo_1_128.ico" />
  </Fragment>
  
  <Fragment>
    <Component Id="ApplicationShortcut" Guid="9c9a11d1-734a-4a8a-b2a1-96fbd3c749b6" Directory="ApplicationProgramsFolder">
      <Shortcut Id="ApplicationStartMenuShortcut"
           Name="Open Clipboard Manager"
         Description="Open Source Clipboard Manager for Windows"
          Target="[INSTALLFOLDER]OCMApp.exe"
                WorkingDirectory="INSTALLFOLDER"
                Icon="Shortcut.ico"/>
      <RemoveFolder Id="INSTALLFOLDER" On="uninstall"/>
      <RegistryValue Root="HKCU" Key="Software\Microsoft\OpenClipboardManager" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
    </Component>
  </Fragment>
</Wix>
